<% layout("/layouts/boilerplate") %>

<style>
.all-reviews{
    display: flex;
}


  .look-review {
    padding: 10px !important;
  }

  @media only screen and (max-width: 470px) {
    body {
      align-items: center;
    }

    .navbar {
      width: 100%;
    }

    #map {
      padding: 10px;
      display: flex;
      height: 280px;
      width: 40vh;
    }

    .listing-card {
      margin-left: 0;
      width: 100%;
    }

    .head {
      margin-left: 0;
      font-weight: 800;
    }

    .map-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      justify-content: center;
    }

    .review-box {
      width: 100%;
      display: flex;
      flex-direction: column;
      margin: 0;
    }

    .all-reviews {
      display: flex;
      flex-direction: column;
      width: 95%;
      /* overflow-y: hidden; */
      margin-left: 0px;
    }

    .review-star {
      display: flex;
      margin: 0px;
    }

    .edit-btns {
      margin: 0px;
      width: 70px;
    }
    .look-review {
      padding: 10px !important;
    }
  }
</style>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
</script>

<div class="row mt-3 show-body">
  <div class="col-8 offset-3 head">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      alt="listing_image"
      class="card-img-top show-img"
    />
    <div class="card-body">
      <p class="card-text">
        <b> <i> Owned-by&nbsp;&nbsp;&nbsp;<%= listing.owner.username %> </i></b>
      </p>
      <p class="card-text"><%=listing.description %></p>
      <p class="card-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <br />
  <!--  -->
  <!--  -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>

  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn edit-btns"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="col-8 offset-3 mb-3 review-box">
    <% if(currUser) { %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      method="POST"
      action="/listings/<%= listing.id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <!--  -->
      <div class="mb-3 mt-3">
        <lebel for="rating" class="form-label">Rating</lebel>
        <fieldset class="starability-slot review-star">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <!--  -->
      <div class="mb-3 mt-3">
        <lable for="comment" class="form-label">Comments</lable>
        <textarea
          name="review[comment]"
          id="comment"
          rows="5"
          cols="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some Comments for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>

      <% } %>
    </form>
    <hr />
    <!--  -->
    <!--  -->

    <% if( listing.reviews.length > 0) {%>
    <div class="  row all-reviews ">
      <p><b>All Reviews</b></p>

      <% for( review of listing.reviews) {%>
      <div class="card col-5 ms-3 mb-3 all-reviews">
        <div class="card-body look-review">
          <h6 class="card-title"><b>@<%= review.author.username %></b></h6>

          <p class="card-text"><%= review.comment %></p>

          <p>
            <b> <%= review.rating%> Star's </b> <% for( let i=1;
            i<=review.rating ;i++) { %>
            <span>‚≠ê</span>
            <% } %>
          </p>

          <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>

    <% } %>
  </div>

  <!--  -->
  <!--  -->

  <div class="col-6 offset-3 mb-3 map-box">
    <h3>Where you'll be</h3>

    <div id="map"></div>
  </div>
  <!--  -->
  <!--  -->
</div>

<script src="/javaScript/map.js"></script>
